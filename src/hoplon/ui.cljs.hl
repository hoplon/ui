;; todo: unregister handlers for elements that are no longer on page
(let [do' (get-method do! :hoplon.core/default)]
  (defmethod do! :hoplon.core/default [e a v]
    (cond
      (fn?     v)             (let [$w (js/jQuery js/window)]
                                   (.on $w "resize" #(do! e a (v (.width $w)))))
      (vector? v)             (doseq [[min val max] (partition 3 2 (cons 0 (conj v 999999)))]
                                (.register js/enquire (str "(min-width: " (->len min) ") and (max-width: " (->len (dec max)) ")") #(do! e a (->len val))))
      (= (namespace a) "css") (do! e :css {(name a) v})
      :else                   (do' e a v))))

