(defn set-fragment! [route & [query]]
  (let [pair  (fn [[k v]] (str (name k) "=" v))
        route (when (seq route) (apply str "/" (interpose "/" (map name route))))
        query (when (seq query) (apply str "?" (interpose "&" (map pair query))))]
    (set! js/window.location.hash (str route query))))

(defn split-if [str re]
  (if str (split str re)))

(defn subs-if [str start end]
  (if str (subs str start end)))

(defn parse-if-int [v]
  (if-let [n (js/parseInt v)] n v))

;;; box model ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(def out-attrs
  {:css/box-sizing     "border-box"    ;; include border and padding in dimensions
   :css/display        "inline-table"  ;; layout ltr ttb when width not 100% to support responsive design
   :css/width          "100%"          ;; default elems to max width to emulate block positioning
   ;:css/height         "100%"          ;; default to max height to support vertical positioning
   :css/vertical-align "top"           ;; inline-block/table elems must be explititly told to align themselves to the top
   :css/text-align     "initial"})    ;; prevent inheritance of alignment from parent

(def out-attr-keys
  [:x :y :z :w :w- :w+ :h :h- :h+ :c :cl :cr :ct :cb :ch :cv :m :ml :mr :mt :mb :mh :mv :o :ol :or :ot :ob :oh :ov])

(def mid-attrs
  {:css/box-sizing "border-box"
   :css/display    "table-cell"})

(def mid-attr-keys
  [:s :sl :sr :st :sb :s-color :color :shadow :opacity :r :rtl :rtr :rbl :rbr :overflow :overflow-h :overflow-y :av :ah :toggle])

(def in-attrs
  {:css/box-sizing "border-box"
   :css/position   "relative"   ;; make positioned children adjust relative to container plus padding
   :css/display    "block"})    ;; prevent white space from creeping in around inline elements

(defn box [tag & args]
  (let [[attrs elems] (#'hoplon.core/parse-args args)]
    #_(prn :box tag attrs elems)
    (->> elems
         (tag in-attrs (apply dissoc attrs (concat mid-attr-keys out-attr-keys)))
         (div mid-attrs (select-keys attrs mid-attr-keys))
         (div out-attrs (select-keys attrs out-attr-keys)))))

(defn boxout [tag & args]
  (let [[attrs elems] (#'hoplon.core/parse-args args)]
    (->> elems
         (div in-attrs (apply dissoc attrs (concat mid-attr-keys out-attr-keys)))
         (div mid-attrs (select-keys attrs mid-attr-keys))
         (tag out-attrs (select-keys attrs out-attr-keys)))))

;;; containers ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(defelem elem [attrs elems]
  (let [as (zipmap [:m :mh :mv] ((comp vals select-keys) attrs [:g :gh :gv]))]
    (box div attrs (if (empty? as) elems (mapv #(% as) elems)))))

(defelem form* [{:keys [submit] :as attrs} elems]
  (let [elem (elem (dissoc attrs :submit) elems)
        data *data*]
    (reset! *submit* submit)
    (.keypress (js/jQuery elem) #(if (= (.-which %) 13) (submit @data)))
    elem))

;;; elements ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(defelem anchor [{:keys [label url] :as attrs} elems]
  ( (div
      :css/box-sizing     "border-box"
      :css/display        "inline-block"
      :css/text-align     "initial"
      :css/vertical-align "top"
      ( (a
          :css/box-sizing "border-box"
          :css/display    "block"
          :css/width      "100%"
          :css/color      "inherit"
          :href           url
          elems)
        (apply dissoc attrs :url :alt out-attr-keys)))
    (select-keys attrs out-attr-keys)))

(defelem button [{:keys [prompt] :as attrs} elems]
  (box
    (hoplon.core/button
      :css/width            "100%"
      :css/background-color "transparent"
      :css/border-style     "none"
      :css/text-align       "inherit")
      ;:css/outline          "none"

    :pr         12
    :ph         14
    :pv         10
    :r          4
    :color      0xFFF
    :s          1
    :s-color    0xCCC
    :ah         :center
    :font-size  +p+
    :font-color 0x333
    :cursor     :pointer
    (dissoc attrs :prompt)
    (cons prompt elems)))

(defelem image [{:keys [label url] :as attrs} _]
  (let [empty-url "data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="]
    (box
     (hoplon.core/img
      :css/width "100%"
      :src       (cell= (or url empty-url))
      :alt       label)
     :w :auto
     (dissoc attrs :label :url))))

